<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/Common")
    <link href='http://fonts.googleapis.com/css?family=Hind:400,700' rel='stylesheet' type='text/css'>
</head>
    <body>
        <nav id="top-nav">
            <div class="foillan-logo">
                <a href="@Url.Action("Index", "Home")"><img src="/Content/Images/foillan-logo.png" />Foillan</a>
            </div>
            <ul class="top-nav-links left">
                <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                <li>@Html.ActionLink("Data Store", "Index", "Taxon", new { area = "Nest" }, null)</li>
                <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
            </ul>
            <ul class="top-nav-links right">
                <li><a href="#">Login</a></li>
            </ul>
        </nav>

        <div id="content-container">
            <section id="main-content">
                @RenderBody()
            </section>
            <footer>
                <p>&copy; @DateTime.Now.Year AndrewIOM - <a href="https://github.com/AndrewIOM/Foillan">View on GitHub</a></p>
            </footer>
            @Scripts.Render("~/bundles/jquery")
            @RenderSection("scripts", required: false)
        </div>
    </body>
</html>